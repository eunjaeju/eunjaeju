  <script>
    let isKorean = false;
    function toggleLanguage() {
      isKorean = !isKorean;
      document.querySelector('.language-toggle').textContent = isKorean ? 'ENG' : '한글';
      document.getElementById('title').textContent = isKorean ? '마린스페어' : 'MarineSpare';
      document.getElementById('welcome').textContent = isKorean ? '마린스페어에 오신 것을 환영합니다' : 'Welcome to MarineSpare';
      document.getElementById('desc').textContent = isKorean
        ? '신뢰할 수 있는 선박 예비 부품 공급업체입니다.'
        : 'Your trusted supplier of marine spare parts.';
    }
  </script>
